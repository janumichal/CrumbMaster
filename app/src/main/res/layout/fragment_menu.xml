<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuFragment">

    <Button
        android:id="@+id/BackBtn"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginBottom="93dp"
        android:backgroundTint="#BDCFA0"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/StatisticsBtn" />

    <Button
        android:id="@+id/StatisticsBtn"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginBottom="200dp"
        android:text="Statistics"
        app:layout_constraintBottom_toTopOf="@+id/BackBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AchievementsBtn" />

    <Button
        android:id="@+id/OptionsBtn"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="198dp"
        android:text="Options"
        app:layout_constraintBottom_toTopOf="@+id/AchievementsBtn"
        app:layout_constraintEnd_toEndOf="@+id/AchievementsBtn"
        app:layout_constraintStart_toStartOf="@+id/AchievementsBtn"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/AchievementsBtn"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Achievements"
        app:layout_constraintBottom_toTopOf="@+id/StatisticsBtn"
        app:layout_constraintEnd_toEndOf="@+id/StatisticsBtn"
        app:layout_constraintStart_toStartOf="@+id/StatisticsBtn"
        app:layout_constraintTop_toBottomOf="@+id/OptionsBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>