<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuFragment">


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/BackBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/black"
        android:clickable="true"
        android:src="@drawable/back_icon"
        app:borderWidth="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/white"
        app:useCompatPadding="false"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/AchievementsBtn"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="95dp"
        android:drawableTop="@drawable/achi_icon"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Achievements"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/StatisticsBtn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/about" />

    <Button
        android:id="@+id/about"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/info_icon"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="About"
        android:textSize="8sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/AchievementsBtn"
        app:layout_constraintEnd_toStartOf="@+id/AchievementsBtn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/StatisticsBtn"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/BackBtn"
        android:layout_alignParentEnd="true"
        android:drawableTop="@drawable/stats_icon"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Statistics"
        android:textSize="8sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/AchievementsBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/AchievementsBtn" />

    <Button
        android:id="@+id/OptionsBtn"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/sett_icon"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Settings"
        android:textSize="8sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/menuItem2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/menuItem2" />

    <Button
        android:id="@+id/menuItem2"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:drawableTop="@drawable/achi_icon"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Menu Item 2"
        android:textSize="8sp"
        app:layout_constraintBottom_toTopOf="@+id/AchievementsBtn"
        app:layout_constraintEnd_toStartOf="@+id/OptionsBtn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/MenuItem1" />

    <Button
        android:id="@+id/MenuItem1"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/achi_icon"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Menu Item 1"
        android:textSize="8sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/menuItem2"
        app:layout_constraintEnd_toStartOf="@+id/menuItem2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>